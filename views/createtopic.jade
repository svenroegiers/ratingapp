extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title(id='eventdetailstitle') Event Details
					div.signup-wall
						form(class='form-signin', action='/createtopic', method='POST', id='eventform')
							input(type='text', name='topicname', class='form-control', placeholder='Eventname',required, autofocus)
							input(type='text', name='subject1', class='form-control', placeholder='Subject1', required)
							input(type='text', name='subject2', class='form-control', placeholder='Subject2',required)
							input(type='text', name='subject3', class='form-control', placeholder='Subject3',required)
							input(type='text', name='subject4', class='form-control', placeholder='Subject4',required)
							input(type='text', name='subject5', class='form-control', placeholder='Subject5',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Create
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}